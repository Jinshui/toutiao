<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gerenzhongxin_beijing"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <ImageButton
            android:id="@+id/id_btn_back_to_toutiao"
            android:layout_width="16dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gerenzhongxin_fanhui"
            android:contentDescription="@string/img_content_description"
            android:onClick="showLeftMenu" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/id_user_profile_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/gerenzhongxin_touxiang"
        android:contentDescription="@string/img_content_description"
        android:onClick="showLeftMenu" />

    <TextView
        android:id="@+id/id_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:text="@string/user_name"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/id_favorites"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/id_favorite_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/gerenzhongxin_shoucang"
                android:contentDescription="@string/img_content_description"
                android:onClick="showLeftMenu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/id_favorite_img"
                android:text="@string/favorites"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/deep_gray" />

        <RelativeLayout
            android:id="@+id/id_downloads"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/id_downloads_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/gerenzhongxin_xiazai"
                android:contentDescription="@string/img_content_description"
                android:onClick="showLeftMenu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/id_downloads_img"
                android:text="@string/downloads"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/deep_gray" />

        <RelativeLayout
            android:id="@+id/id_push"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/id_push_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/gerenzhongxin_tuisong"
                android:contentDescription="@string/img_content_description"
                android:onClick="showLeftMenu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/id_push_img"
                android:text="@string/push"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>